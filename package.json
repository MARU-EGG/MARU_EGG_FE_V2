{
  "name": "my-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "commit": "cz",
    "build-storybook": "turbo run build-storybook --filter=storybook -- --output-dir=/tmp/chromatic-storybook"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.1",
    "commitizen": "^4.3.1",
    "cz-customizable": "^7.4.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "turbo": "^2.3.3",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@9.0.0",
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "engines": {
    "node": ">=18"
  }
}
